<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5p %c.java:%L - %msg%n"/>
        </Console>
        <File name="FileAppender" fileName="logs/test.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5p %c.java:%L - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
        <Logger name="firefox" level = "info" additivity = "false">
            <AppenderRef ref="FileAppender"/>
        </Logger>
        <Logger name="chrome" level = "info" additivity = "false">
            <AppenderRef ref="FileAppender"/>
        </Logger>
    </Loggers>
</Configuration>